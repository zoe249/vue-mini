{
  "compilerOptions": {
    "outDir": "dist", // 输出目录
    "sourceMap": true, // 采用 sourcemap
    "target": "ES2016",
    "module": "ESNext",
    "moduleResolution": "node", // 模块解析方法
    "strict": false, // 严格模式
    "resolveJsonModule": true, // 解析json模块
    "esModuleInterop": true, // 允许通过es6语法使用commonjs模块
    "jsx": "preserve", // 不转义
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@vue/*": ["packages/*/src"]
    }
  }
}